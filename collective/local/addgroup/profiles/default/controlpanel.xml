<?xml version="1.0"?>
<object
    name="portal_controlpanel"
    xmlns:i18n="http://xml.zope.org/namespaces/i18n"
    i18n:domain="addgroup"
    purge="False">

    <configlet
        title="Local group management settings"
        action_id="addgroup_settings"
        appId="collective.local.addgroup"
        category="Products"
        condition_expr=""
        icon_expr="string:${portal_url}/group.png"
        url_expr="string:${portal_url}/@@addgroup-settings"
        visible="True"
        i18n:attributes="title">
            <permission>Manage portal</permission>
    </configlet>

</object>
